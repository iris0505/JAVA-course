public class ExceptionHandlingExample {
    public static void main(String[] args) {
        try {
            // Генерация первого исключения (ArithmeticException)
            int result = 10 / 0; // Деление на ноль
        } catch (ArithmeticException e) {
            // Перехватываем и обрабатываем ArithmeticException
            System.out.println("Перехвачено исключение: " + e.getMessage());
        }

        // Генерация второго исключения (NullPointerException)
        String str = null;
        // Попытка вызвать метод на null приведет к аварийной остановке программы
        int length = str.length(); // Это вызовет NullPointerException
        System.out.println("Длина строки: " + length); // Этот код не будет выполнен
    }
}
